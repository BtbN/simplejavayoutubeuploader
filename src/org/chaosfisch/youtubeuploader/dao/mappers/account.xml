<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.chaosfisch.youtubeuploader.dao.mappers.AccountMapper">

	<select id="findAccount" parameterType="Account" resultType="Account">
		SELECT * FROM ACCOUNTS
		<where>
			<if test="identity != null">
				identity = #{identity}
			</if>
			<if test="name != null">
				AND name = #{name}
			</if>
		</where>
	</select>

	<select id="getAccounts" resultType="Account">SELECT * FROM ACCOUNTS</select>

	<delete id="deleteAccount" parameterType="Account" flushCache="true">
		DELETE FROM ACCOUNTS WHERE identity = #{identity}
	</delete>

	<insert id="createAccount" parameterType="Account">
		INSERT INTO ACCOUNTS (identity, name, password) VALUES (null, #{name}, #{password})
		<selectKey resultType="int" keyProperty="identity" order="AFTER" statementType="STATEMENT">
			CALL IDENTITY();
		</selectKey>
	</insert>

	<update id="updateAccount" parameterType="Account">
		UPDATE ACCOUNTS SET identity	= #{identity},
							name 		= #{name},
							password 	= #{password}
		WHERE identity = #{identity}
	</update>

</mapper>
