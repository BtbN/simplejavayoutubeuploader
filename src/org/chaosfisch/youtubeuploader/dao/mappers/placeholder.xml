<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.chaosfisch.youtubeuploader.dao.mappers.PlaceholderMapper">

	<select id="findPlaceholder" parameterType="Placeholder" resultType="Placeholder">
		SELECT * FROM PLACEHOLDER
		<where>
			<if test="identity != null">
				identity = #{identity}
			</if>
			<if test="placeholder != null">
				AND placeholder = #{placeholder}
			</if>
		</where>
	</select>

	<select id="getPlaceholders" resultType="Placeholder">
		SELECT * FROM PLACEHOLDER
	</select>

	<delete id="deletePlaceholder" parameterType="Placeholder" flushCache="true">
		DELETE FROM PLACEHOLDER WHERE identity = #{identity}
	</delete>

	<insert id="createPlaceholder" parameterType="Placeholder">
		INSERT INTO PLACEHOLDER (identity, placeholder, replacement) VALUES (null, #{placeholder}, #{replacement})
		<selectKey resultType="int" keyProperty="identity" order="AFTER" statementType="STATEMENT">
			CALL IDENTITY();
		</selectKey>
	</insert>

	<update id="updatePlaceholder" parameterType="Placeholder">
		UPDATE PLACEHOLDER SET identity	= #{identity},
							placeholder = #{placeholder},
							replacement = #{replacement}
		WHERE identity = #{identity}
	</update>

</mapper>
