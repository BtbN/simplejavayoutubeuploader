<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.chaosfisch.youtubeuploader.db.hbm">

	<class name="org.chaosfisch.youtubeuploader.db.PresetEntry" table="PRESETS" schema="PUBLIC">
		<id name="identity" type="int" column="identity">
			<generator class="org.hibernate.id.IdentityGenerator"/>
		</id>
		<property name="autotitle" type="boolean" column="autotitle"/>
		<property name="autotitleFormat" type="java.lang.String" column="autotitleFormat"/>
		<property name="category" type="java.lang.String" column="category"/>
		<property name="comment" type="short" column="comment"/>
		<property name="commentvote" type="boolean" column="commentvote"/>
		<property name="defaultDir" type="java.lang.String" column="defaultDir"/>
		<property name="description" type="text" column="description"/>
		<property name="embed" type="boolean" column="embed"/>
		<property name="keywords" type="text" column="keywords"/>
		<property name="mobile" type="boolean" column="mobile"/>
		<property name="name" type="java.lang.String" column="name"/>
		<property name="numberModifier" type="short" column="numberModifier"/>
		<property name="rate" type="boolean" column="rate"/>
		<property name="videoresponse" type="short" column="videoresponse"/>
		<property name="visibility" type="short" column="visibility"/>
		<many-to-one lazy="false" name="playlist" class="org.chaosfisch.youtubeuploader.db.PlaylistEntry"/>
		<many-to-one lazy="false" name="account" class="org.chaosfisch.youtubeuploader.db.AccountEntry"/>
	</class>

</hibernate-mapping>
