<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.chaosfisch.youtubeuploader.db.hbm">

	<class name="org.chaosfisch.youtubeuploader.db.AccountEntry" table="ACCOUNTS" schema="PUBLIC">
		<id name="identity" type="int" column="IDENTITY">
			<generator class="org.hibernate.id.IdentityGenerator"/>
		</id>
		<property name="name" type="java.lang.String" column="NAME"/>
		<property name="password" type="java.lang.String" column="PASSWORD"/>
		<property name="secret" type="java.lang.String" column="SECRET"/>
		<set name="queue" lazy="false" inverse="true" cascade="all">
			<key column="account_id" on-delete="cascade"/>
			<one-to-many class="org.chaosfisch.youtubeuploader.db.QueueEntry"/>
		</set>
		<set name="playlists" lazy="false" inverse="true" cascade="all">
			<key column="account_id" on-delete="cascade"/>
			<one-to-many class="org.chaosfisch.youtubeuploader.db.PlaylistEntry"/>
		</set>
		<set name="presets" lazy="false" inverse="true" cascade="all">
			<key column="account_id" on-delete="cascade"/>
			<one-to-many class="org.chaosfisch.youtubeuploader.db.PresetEntry"/>
		</set>
	</class>

</hibernate-mapping>
