<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.chaosfisch.youtubeuploader.db.hbm">

	<class name="org.chaosfisch.youtubeuploader.db.PlaylistEntry" table="PLAYLISTS" schema="PUBLIC">
		<id name="identity" type="int" column="identity">
			<generator class="org.hibernate.id.IdentityGenerator"/>
		</id>
		<property name="playlistKey" unique="true" type="java.lang.String" column="playlistKey"/>
		<property name="name" type="java.lang.String" column="title"/>
		<property name="url" type="java.lang.String" column="url"/>
		<property name="number" type="int" column="number"/>
		<property name="summary" type="text" column="summary"/>
		<many-to-one name="account" not-null="true" class="org.chaosfisch.youtubeuploader.db.AccountEntry"/>
		<set name="presets" inverse="true">
			<key/>
			<one-to-many class="org.chaosfisch.youtubeuploader.db.PresetEntry"/>
		</set>
		<set name="queue" inverse="true">
			<key/>
			<one-to-many class="org.chaosfisch.youtubeuploader.db.QueueEntry"/>
		</set>
	</class>

</hibernate-mapping>
