<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?scenebuilder-preview-i18n-resource ../resources/application_de.properties?>
<?scenebuilder-stylesheet ../resources/style.css?>

<HBox fx:id="viewElementsHBox" prefHeight="-1.0" prefWidth="-1.0" spacing="5.0" xmlns:fx="http://javafx.com/fxml" fx:controller="org.chaosfisch.youtubeuploader.controller.QueueCommandController">
  <children>
    <Button fx:id="startQueue" maxWidth="-1.0" minHeight="-1.0" minWidth="-1.0" mnemonicParsing="false" onAction="#startQueue" text="%button.start" />
    <Button fx:id="stopQueue" maxWidth="-1.0" minHeight="-1.0" minWidth="-1.0" mnemonicParsing="false" onAction="#stopQueue" text="%button.stop" />
    <Label alignment="CENTER_LEFT" minHeight="-1.0" minWidth="-1.0" text="%label.actionOnFinish" underline="false">
      <labelFor>
        <ChoiceBox fx:id="actionOnFinish" maxWidth="-1.0" minHeight="-1.0" minWidth="-1.0">
          <items>
            <FXCollections fx:factory="observableArrayList">
              <String fx:value="Item 1" />
              <String fx:value="Item 2" />
              <String fx:value="Item 3" />
            </FXCollections>
          </items>
        </ChoiceBox>
      </labelFor>
    </Label>
    <fx:reference source="actionOnFinish" />
  </children>
  <padding>
    <Insets />
  </padding>
</HBox>
