<?import de.chaosfisch.controls.spinner.NumberSpinner?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox spacing="5.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.chaosfisch.uploader.gui.upload.UploadPresenter">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
    <children>
        <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
            <content>
                <ListView fx:id="uploads"/>
            </content>
        </ScrollPane>
        <HBox fx:id="dropzone" alignment="CENTER" layoutX="268.0" layoutY="42.0" minHeight="100.0" onDragDropped="#filesDragDropped"
              onDragEntered="#filesDragEntered" onDragExited="#filesDragExited" onDragOver="#filesDragOver" onMouseClicked="#openFiles"
              onMouseEntered="#mouseEntered" style="-fx-border-style: dotted;" xmlns="http://javafx.com/javafx/8">
            <children>
                <Label layoutX="268.0" layoutY="42.0" text="Drag files or Click to get started!"/>
            </children>
        </HBox>

        <HBox prefHeight="30.0" spacing="5.0">
            <children>
                <Button fx:id="startButton" mnemonicParsing="false" text="Start"/>
                <Button fx:id="stopButton" mnemonicParsing="false" text="Stop"/>
                <ComboBox fx:id="actionOnFinishList" promptText="Action after Uploading...?"/>
                <Button mnemonicParsing="false" onAction="#removeUploads" text="LÃ¶schen"/>
                <NumberSpinner maxValue="10" minValue="1" value="1" fx:id="maxUploads"/>
                <NumberSpinner stepWidth="10" minValue="0" value="0" fx:id="maxSpeed"/>
            </children>
        </HBox>
    </children>
</VBox>
