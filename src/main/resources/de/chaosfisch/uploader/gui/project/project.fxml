<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.chaosfisch.uploader.gui.project.ProjectPresenter">
    <children>
        <ComboBox fx:id="projects" maxWidth="Infinity"/>
        <HBox spacing="5.0">
            <padding>
                <Insets bottom="5.0" right="5.0" top="5.0"/>
            </padding>
            <children>
                <Button mnemonicParsing="false" onAction="#saveProject" text="Speichern"/>
                <Button mnemonicParsing="false" onAction="#resetProject" text="Zurücksetzen"/>
                <Button mnemonicParsing="false" onAction="#createProject" text="Neues erstellen"/>
                <Button mnemonicParsing="false" onAction="#deleteProject" text="Löschen"/>
            </children>
        </HBox>
    </children>
</VBox>
