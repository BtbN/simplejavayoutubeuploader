<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox fx:controller="de.chaosfisch.uploader.gui.project.ProjectPresenter" xmlns:fx="http://javafx.com/fxml">
	<children>
		<ComboBox maxWidth="Infinity" fx:id="projects"/>
		<HBox spacing="5.0">
			<padding>
				<Insets top="5" bottom="5" right="5"/>
			</padding>
			<children>
				<Button mnemonicParsing="false" text="Speichern" onAction="#saveProject"/>
				<Button mnemonicParsing="false" text="Zurücksetzen" onAction="#resetProject"/>
				<Button mnemonicParsing="false" text="Neues erstellen" onAction="#createProject"/>
				<Button mnemonicParsing="false" text="Löschen" onAction="#deleteProject"/>
			</children>
		</HBox>
	</children>
</VBox>