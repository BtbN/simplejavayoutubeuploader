<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane hgap="5.0" minWidth="450.0" vgap="5.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
		  fx:controller="de.chaosfisch.uploader.gui.edit.left.EditLeftPresenter">
	<children>
		<Label text="Datei:"/>
		<Label text="Titel:" GridPane.rowIndex="1"/>
		<Label text="Kategorie:" GridPane.rowIndex="2"/>
		<Label text="Beschreibung:" GridPane.rowIndex="3"/>
		<Label text="Tags:" GridPane.rowIndex="5"/>
		<Label text="Account:" GridPane.rowIndex="7"/>
		<Label text="Playlist(s):" GridPane.rowIndex="8"/>
		<ComboBox maxWidth="Infinity" fx:id="files" GridPane.columnIndex="1"/>
		<TextField GridPane.columnIndex="1" fx:id="title" GridPane.rowIndex="1"/>
		<ComboBox maxWidth="Infinity" fx:id="categories" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
		<ScrollPane fitToHeight="true" fitToWidth="true" GridPane.columnIndex="1" GridPane.rowIndex="3"
					GridPane.rowSpan="2">
			<content>
				<TextArea fx:id="description"/>
			</content>
		</ScrollPane>
		<ScrollPane fitToHeight="true" fitToWidth="true" GridPane.columnIndex="1" GridPane.rowIndex="5"
					GridPane.rowSpan="2">
			<content>
				<TextArea fx:id="tags"/>
			</content>
		</ScrollPane>
		<ComboBox maxWidth="Infinity" fx:id="accounts" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
		<ComboBox maxWidth="Infinity" fx:id="playlists" promptText="Add Playlist..." GridPane.columnIndex="1"
				  GridPane.rowIndex="8"/>
		<ListView fx:id="selectedPlaylists" maxHeight="100" orientation="HORIZONTAL" GridPane.rowIndex="9"
				  GridPane.columnIndex="1"/>
	</children>
	<columnConstraints>
		<ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity"/>
		<ColumnConstraints hgrow="SOMETIMES"/>
	</columnConstraints>
	<padding>
		<Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
	</padding>
	<rowConstraints>
		<RowConstraints maxHeight="-Infinity" vgrow="SOMETIMES"/>
		<RowConstraints maxHeight="-Infinity" vgrow="SOMETIMES"/>
		<RowConstraints maxHeight="-Infinity" vgrow="SOMETIMES"/>
		<RowConstraints maxHeight="-Infinity" vgrow="NEVER"/>
		<RowConstraints vgrow="SOMETIMES"/>
		<RowConstraints maxHeight="-Infinity" vgrow="NEVER"/>
		<RowConstraints vgrow="SOMETIMES"/>
		<RowConstraints maxHeight="-Infinity" vgrow="SOMETIMES"/>
		<RowConstraints maxHeight="-Infinity" vgrow="SOMETIMES"/>
		<RowConstraints maxHeight="-Infinity" vgrow="SOMETIMES"/>
		<RowConstraints maxHeight="-Infinity" vgrow="SOMETIMES"/>
	</rowConstraints>
</GridPane>
