<GridPane id="GridPane" alignment="CENTER" hgap="5.0" vgap="5.0" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.vgrow="ALWAYS"
		  xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="de.chaosfisch.uploader.gui.account.add.StepPresenter">
	<padding>
		<Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
	</padding>
	<columnConstraints>
		<ColumnConstraints hgrow="SOMETIMES" minWidth="-1.0"/>
	</columnConstraints>
	<rowConstraints>
		<RowConstraints maxHeight="22.0" prefHeight="22.0" vgrow="SOMETIMES"/>
		<RowConstraints maxHeight="22.0" prefHeight="22.0" vgrow="SOMETIMES"/>
		<RowConstraints maxHeight="21.0" prefHeight="21.0" vgrow="SOMETIMES"/>
	</rowConstraints>
	<TextField fx:id="username" prefWidth="-1.0" promptText="Benutzername eingeben..." GridPane.columnIndex="0" GridPane.rowIndex="0"/>
	<PasswordField fx:id="password" prefWidth="-1.0" promptText="Passwort eingeben..." GridPane.columnIndex="0" GridPane.rowIndex="1"/>
	<Button onAction="#login" alignment="CENTER_RIGHT" contentDisplay="RIGHT" maxHeight="-1.0" maxWidth="-1.0" minWidth="-1.0" text="Login"
			wrapText="false" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="2"/>
</GridPane>

