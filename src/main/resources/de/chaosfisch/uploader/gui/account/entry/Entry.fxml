<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<TitledPane fx:id="titledpane" animated="false" contentDisplay="RIGHT" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="de.chaosfisch.uploader.gui.account.entry.EntryPresenter">
    <content>
        <FlowPane fx:id="flowpane" hgap="5" vgap="5"/>
    </content>
    <graphic>
        <HBox spacing="5.0">
            <children>
                <Button mnemonicParsing="false" onAction="#validateAccount" text="Validate"/>
                <Button mnemonicParsing="false" onAction="#deleteAccount" text="Delete"/>
            </children>
        </HBox>
    </graphic>
</TitledPane>
