<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="persistenceUnit" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>de.chaosfisch.google.account.Account</class>
        <class>de.chaosfisch.google.youtube.upload.Upload</class>
        <class>de.chaosfisch.google.youtube.upload.Status</class>
        <class>de.chaosfisch.google.youtube.upload.metadata.Metadata</class>
        <class>de.chaosfisch.google.youtube.upload.metadata.permissions.Permissions</class>
        <class>de.chaosfisch.google.youtube.upload.metadata.Monetization</class>
        <class>de.chaosfisch.google.youtube.playlist.Playlist</class>
        <class>de.chaosfisch.uploader.template.Template</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:h2:~/SimpleJavaYoutubeUploader/youtubeuploader-v3;INIT=RUNSCRIPT FROM '~/SimpleJavaYoutubeUploader/schema.sql'"/>
            <property name="javax.persistence.jdbc.user" value="username"/>
            <property name="javax.persistence.jdbc.password" value=""/>

            <!-- EclipseLink should create the database schema automatically -->
            <property name="eclipselink.ddl-generation" value="create-tables"/>
            <property name="eclipselink.ddl-generation.output-mode"
                      value="database"/>
        </properties>

    </persistence-unit>
</persistence>