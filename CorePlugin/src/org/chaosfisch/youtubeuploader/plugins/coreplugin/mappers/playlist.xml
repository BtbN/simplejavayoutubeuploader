<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.chaosfisch.youtubeuploader.plugins.coreplugin.mappers.PlaylistMapper">

	<select id="getAll" resultType="Playlist">
		SELECT * FROM PLAYLISTS
	</select>

	<select id="findPlaylist" resultType="Playlist" parameterType="int">
		SELECT * FROM PLAYLISTS WHERE identity = #{id}
	</select>

	<select id="findPlaylists" resultType="Playlist" parameterType="Account">
		SELECT * FROM PLAYLISTS WHERE ACCOUNT_ID = #{identity}
	</select>

	<insert id="createPlaylist" parameterType="Playlist" useGeneratedKeys="true" keyProperty="identity">
		INSERT INTO PLAYLISTS (playlistKey, title, url, summary, number, account_id) VALUES (#{playlistKey}, #{title}, #{url}, #{summary}, #{number}, #{account.identity})
		<selectKey resultType="int" keyProperty="identity" order="AFTER" statementType="STATEMENT">
			CALL IDENTITY();
		</selectKey>
	</insert>

	<update id="updatePlaylist" parameterType="Playlist">
		UPDATE PLAYLISTS SET 	identity	= #{identity},
								playlistKey = #{playlistKey},
								title 		= #{title},
								url			= #{url},
								summary		= #{summary},
								number		= #{number}
		WHERE identity = #{identity}
	</update>

	<delete id="deletePlaylist" parameterType="Playlist">
		DELETE FROM PLAYLISTS WHERE identity = #{identity}
	</delete>

</mapper>
