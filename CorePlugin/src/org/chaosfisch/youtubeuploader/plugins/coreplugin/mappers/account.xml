<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.chaosfisch.youtubeuploader.plugins.coreplugin.mappers.AccountMapper">

	<select id="findAccount" parameterType="int" resultType="Account">
        SELECT * FROM ACCOUNTS WHERE identity = #{id}
    </select>

	<select id="getAccounts" resultType="Account">
		SELECT * FROM ACCOUNTS
	</select>

	<delete id="deleteAccount" parameterType="Account" flushCache="true">
		DELETE FROM ACCOUNTS WHERE identity = #{identity}
	</delete>

	<insert id="createAccount" parameterType="Account">
		INSERT INTO ACCOUNTS (identity, name, password, secret) VALUES (null, #{name}, #{password}, #{secret})
		<selectKey resultType="int" keyProperty="identity" order="AFTER" statementType="STATEMENT">
			CALL IDENTITY();
		</selectKey>
	</insert>

	<update id="updateAccount" parameterType="Account">
		UPDATE ACCOUNTS SET identity	= #{identity}
							name 		= #{name},
							password 	= #{password},
							secret 		= #{secret}
		WHERE identity = #{identity}
	</update>

</mapper>
