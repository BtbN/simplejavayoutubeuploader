<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.chaosfisch.youtubeuploader.plugins.socializeplugin.mappers.MessageMapper">

	<select id="findMessages" parameterType="Message" resultType="Message">
		SELECT * FROM MESSAGES
		<where>
			<if test="identity != null">identity = #{identity}</if>
			<if test="message != null">AND message = #{message}</if>
			<if test="uploadid != null">AND uploadid = #{uploadID}</if>
			<if test="facebook != null">AND facebook = #{facebook}</if>
			<if test="twitter != null">AND twitter = #{twitter}</if>
			<if test="youtube != null">AND youtube = #{youtube}</if>
			<if test="googlePlus != null">AND googlePlus = #{googlePlus}</if>
		</where>
	</select>

	<select id="getMessages" resultType="Message">
		SELECT * FROM MESSAGES ORDER BY identity
	</select>

	<delete id="deleteMessage" parameterType="Message" flushCache="true">
		DELETE FROM MESSAGES WHERE identity = #{identity}
	</delete>

	<insert id="createMessage" parameterType="Message">
		INSERT INTO MESSAGES (identity, message, uploadid, facebook, twitter, youtube, googlePlus) VALUES (null, #{message}, #{uploadID}, #{facebook}, #{twitter}, #{youtube}, #{googlePlus})
		<selectKey resultType="int" keyProperty="identity" order="AFTER" statementType="STATEMENT">
			CALL IDENTITY();
		</selectKey>
	</insert>

	<update id="updateMessage" parameterType="Message">
		UPDATE MESSAGES SET identity	= #{identity}
							message 	= #{message},
							uploadid 	= #{uploadID},
							facebook 	= #{facebook},
							twitter    	= #{twitter},
							youtube		= #{youtube},
							googlePlus  = #{googlePlus}
		WHERE identity = #{identity}
	</update>

	<select id="findMessagesByQueueID" parameterType="Integer" resultType="Message">
		SELECT * FROM MESSAGES WHERE uploadID = #{uploadID}
	</select>

</mapper>

